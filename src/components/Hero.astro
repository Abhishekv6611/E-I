<section 
  class="relative min-h-screen flex items-center justify-center bg-gradient-to-r from-primary-600 to-primary-500 overflow-hidden" 
  id="home"
>
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
          <path d="M 50 0 L 0 0 0 50" fill="none" stroke="#FFF" stroke-width="1"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <!-- Floating elements animation -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="engineer-elements"></div>
  </div>

  <div class="container mx-auto px-4 z-10 text-center md:text-left max-w-6xl">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div data-aos="fade-right">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white leading-tight mb-6">
          <span class="block">Empowering</span>
          <span class="block">Industries with</span>
          <span class="text-accent-400 block">Electrical & Instrumentation</span>
          <span class="block">Expertise</span>
        </h1>
        
        <p class="text-secondary-200 text-lg md:text-xl mb-8 max-w-xl">
          Providing specialized engineering solutions to optimize your industrial processes since 2020.
        </p>
        
        <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 justify-center md:justify-start">
          <a 
            href="#services" 
            class="px-8 py-3 rounded-md bg-accent-500 text-white font-medium transition-all hover:bg-accent-600 hover:shadow-lg"
          >
            Our Services
          </a>
          <a 
            href="#contact" 
            class="px-8 py-3 rounded-md bg-transparent text-white border border-white font-medium transition-all hover:bg-white/10"
          >
            Contact Us
          </a>
        </div>
      </div>
      
      <div class="hidden md:block" data-aos="fade-left">
        <img 
          src="https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
          alt="Electrical & Instrumentation Engineering" 
          class="w-full h-auto rounded-lg shadow-xl"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .engineer-elements {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .engineer-elements::before,
  .engineer-elements::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.05);
    animation: float 15s infinite ease-in-out;
  }
  
  .engineer-elements::before {
    width: 300px;
    height: 300px;
    top: 10%;
    right: -100px;
    animation-delay: 0s;
  }
  
  .engineer-elements::after {
    width: 500px;
    height: 500px;
    bottom: -200px;
    left: -200px;
    animation-delay: -5s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }
</style>