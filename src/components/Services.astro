---

<section class="py-20 bg-gray-50" id="services">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-primary-600 mb-4 font-display">Our Services</h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-8"></div>
      <p class="text-lg text-gray-600">
        We take pride in delivering a comprehensive range of services to meet the diverse needs of our clients.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {services.map((service, index) => (
        <div 
          class="bg-white rounded-lg shadow-service p-8 transition-transform hover:-translate-y-2 duration-300"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="flex flex-col h-full">
            <div class="text-accent-500 mb-4" set:html={service.icon} />
            
            <h3 class="text-2xl font-bold text-primary-600 mb-4 font-display">{service.title}</h3>
            
            <p class="text-gray-700 mb-6 flex-grow">{service.description}</p>
            
            <div class="border-t border-gray-200 pt-4 mt-auto">
              <h4 class="font-bold text-primary-500 mb-3">Key Features:</h4>
              <ul class="space-y-2">
                {service.items.map(item => (
                  <li class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-accent-500 mr-2 mt-0.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-gray-700">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>