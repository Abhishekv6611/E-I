---

<section class="py-20 bg-white" id="projects">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-primary-600 mb-4 font-display">Our Projects</h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-8"></div>
      <p class="text-lg text-gray-600">
        With a proven track record of successful implementations, we've helped numerous clients 
        achieve their infrastructure and engineering goals.
      </p>
    </div>
    
    <!-- Project Tabs -->
    <div class="mb-12">
      <div class="flex flex-wrap border-b border-gray-200">
        <button 
          class="py-3 px-6 font-medium text-primary-600 border-b-2 border-accent-500 bg-gray-50 focus:outline-none" 
          id="tab-ongoing"
        >
          Ongoing Projects
        </button>
        <button 
          class="py-3 px-6 font-medium text-gray-500 hover:text-primary-600 focus:outline-none" 
          id="tab-completed"
        >
          Completed Projects
        </button>
      </div>
    </div>
    
    <!-- Ongoing Projects (Default Active) -->
    <div id="content-ongoing" class="transition-all duration-300">
      {ongoingProjects.map((client, index) => (
        <div 
          class="mb-8 bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="bg-primary-50 px-6 py-4 border-l-4 border-accent-500">
            <h3 class="text-xl font-bold text-primary-600 font-display">{client.client}</h3>
          </div>
          <div class="p-6">
            <ul class="space-y-3">
              {client.projects.map(project => (
                <li class="flex">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-accent-500 mr-2 mt-0.5 flex-shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                  </svg>
                  <span class="text-gray-700">{project}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Completed Projects (Initially Hidden) -->
    <div id="content-completed" class="hidden transition-all duration-300">
      {completedProjects.map((client, index) => (
        <div 
          class="mb-8 bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="bg-primary-50 px-6 py-4 border-l-4 border-green-500">
            <h3 class="text-xl font-bold text-primary-600 font-display">{client.client}</h3>
          </div>
          <div class="p-6">
            <ul class="space-y-3">
              {client.projects.map(project => (
                <li class="flex">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700">{project}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabOngoing = document.getElementById('tab-ongoing');
    const tabCompleted = document.getElementById('tab-completed');
    const contentOngoing = document.getElementById('content-ongoing');
    const contentCompleted = document.getElementById('content-completed');
    
    tabOngoing.addEventListener('click', () => {
      // Update tabs
      tabOngoing.classList.add('border-b-2', 'border-accent-500', 'text-primary-600', 'bg-gray-50');
      tabOngoing.classList.remove('text-gray-500');
      
      tabCompleted.classList.remove('border-b-2', 'border-accent-500', 'text-primary-600', 'bg-gray-50');
      tabCompleted.classList.add('text-gray-500');
      
      // Show/hide content
      contentOngoing.classList.remove('hidden');
      contentCompleted.classList.add('hidden');
      
      // Refresh AOS animations
      AOS.refresh();
    });
    
    tabCompleted.addEventListener('click', () => {
      // Update tabs
      tabCompleted.classList.add('border-b-2', 'border-accent-500', 'text-primary-600', 'bg-gray-50');
      tabCompleted.classList.remove('text-gray-500');
      
      tabOngoing.classList.remove('border-b-2', 'border-accent-500', 'text-primary-600', 'bg-gray-50');
      tabOngoing.classList.add('text-gray-500');
      
      // Show/hide content
      contentCompleted.classList.remove('hidden');
      contentOngoing.classList.add('hidden');
      
      // Refresh AOS animations
      AOS.refresh();
    });
  });
</script>