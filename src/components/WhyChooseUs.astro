<section class="py-20 bg-gradient-to-b from-primary-600 to-primary-700 text-white" id="why-us">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 font-display">Why Choose Us</h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-8"></div>
      <p class="text-lg text-secondary-300">
        Our commitment to excellence, innovation, and customer satisfaction sets us apart in the industry.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {reasons.map((reason, index) => (
        <div 
          class="bg-white/10 backdrop-blur-sm rounded-lg p-6 hover:bg-white/15 transition-colors duration-300"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="text-accent-400 mb-4" set:html={reason.icon} />
          <h3 class="text-xl font-bold mb-3 font-display">{reason.title}</h3>
          <p class="text-secondary-200">{reason.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>